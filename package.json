{
  "name": "bsky-bot-recalls",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev --test-scheduled",
    "dev:debug": "wrangler dev --test-scheduled --log-level debug",
    "start": "wrangler dev --test-scheduled",
    "cf-typegen": "wrangler types",
    "test:cron": "curl \"http://localhost:8787/__scheduled?cron=*+*+*+*+*\"",
    "migrate:list": "wrangler d1 migrations list DB --local",
    "migrate:list:preview": "wrangler d1 migrations list DB --env preview",
    "migrate:list:production": "wrangler d1 migrations list DB --env production",
    "migrate:apply": "wrangler d1 migrations apply DB --local",
    "migrate:apply:preview": "wrangler d1 migrations apply DB --env preview",
    "migrate:apply:production": "wrangler d1 migrations apply DB --env production",
    "generate":"drizzle-kit generate"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20241112.0",
    "@types/he": "^1.2.3",
    "drizzle-kit": "^0.28.1",
    "typescript": "^5.7.2",
    "wrangler": "^3.90.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "he": "^1.2.0",
    "valibot": "1.0.0-beta.8"
  }
}
